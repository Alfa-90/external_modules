<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_commercial_rules" model="ir.ui.view">
        <field name="name">res.partner.form.commercial.rules</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" class="oe_stat_button" name="buttom_view_promotions" icon="fa-list">
                    <field string="Comercial rules" name="rules_count" widget="statinfo"/>                        
                </button>
            </xpath>
        </field>
    </record>

</odoo>
