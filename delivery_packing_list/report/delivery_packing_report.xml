<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="picking_packing_list">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="row">
                                <div class="col-xs-6">
                                    <div t-if="o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id != o.partner_id.id">
                                        <span><strong>Delivery Address:</strong></span>
                                        <div t-field="o.move_lines[0].partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                    <div t-if="o.picking_type_id.code != 'internal' and (not o.move_lines or not o.move_lines[0].partner_id) and o.picking_type_id.warehouse_id.partner_id">
                                        <span><strong>Warehouse Address:</strong></span>
                                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                </div>
                                <div class="col-xs-5 col-xs-offset-1">
                                    <div t-if="o.picking_type_id.code=='incoming' and o.partner_id">
                                        <span><strong>Partner Address:</strong></span>
                                    </div>
                                    <div t-if="o.picking_type_id.code=='internal' and o.partner_id">
                                        <span><strong>Warehouse Address:</strong></span>
                                    </div>
                                    <div t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
                                        <span><strong>Customer Address:</strong></span>
                                    </div>
                                    <div t-if="o.partner_id" name="partner_header">
                                        <div t-field="o.partner_id"
                                           t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                        <p t-if="o.sudo().partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.sudo().partner_id.vat"/></p>
                                    </div>
                                </div>
                            </div>

                            <div class="clearfix"/>

                            <table class="table" width="100%">
                                <tr>
                                    <td width="60%">
                                        <h1 t-field="o.name" class="mt0 pull-left"/>
                                    </td>
                                    <td width="40%">
                                        <strong>Date</strong> <span t-field="o.date"/>
                                    </td>
                                </tr>
                            </table>

                            <br/>
                            <table class="table" width="100%" t-foreach="o.packing_list_ids" t-as="pack">
                                  <thead>
                                      <tr>
                                        <td border="1">
                                             Delivery pack number: <strong><span t-field="pack.name"/></strong>
                                        </td>
                                      </tr>
                                  </thead>
                                  <tbody>
                                      <tr>
                                          <td >
                                              <table class="table" width="100%">

                                                  <thead>

                                                    <tr>
                                                        <th width="10%"></th>
                                                        <th width="75%"></th>
                                                        <th width="25%"></th>
                                                    </tr>
                                                  </thead>
                                              <tbody>
                                                    <tr t-foreach="pack.stock_move_ids.sorted(key=lambda m: m.product_id.id)" t-as="move">
                                                        <td></td>
                                                        <td>
                                                            <span t-field="move.product_id.display_name"/><br/>
                                                            <span t-field="move.product_id.description_picking"/>
                                                        </td>
                                                        <td>
                                                            <span t-if="move.product_qty" t-field="move.product_qty"/>
                                                            <span t-if="not move.product_qty" t-esc="move.product_uom._compute_quantity(move.quantity_done, move.product_id.uom_id, rounding_method='HALF-UP')"/>
                                                            <span t-field="move.product_id.uom_id" groups="product.group_uom"/>
                                                        </td>
                                                    </tr>
                                              </tbody>
                                            </table>
                                          </td>
                                      </tr>
                                  </tbody>
                                  <tfoot>
                                      <tr>
                                          <td>
                                              <br/>
                                          </td>
                                      </tr>
                                  </tfoot>
                            </table>
                            <table class="table" width="100%" t-if="o.move_lines.filtered(lambda x: not x.packing_list_id)">
                                  <thead>
                                      <tr>
                                        <td border="1">
                                             Delivery pack number: <strong>No pack number</strong>
                                        </td>
                                      </tr>
                                  </thead>
                                  <tbody>
                                      <tr>
                                          <td >
                                              <table class="table" width="100%">
                                                  <thead>
                                                    <tr>
                                                        <th width="10%"></th>
                                                        <th width="75%"></th>
                                                        <th width="25%"></th>
                                                    </tr>
                                                  </thead>
                                              <tbody>
                                                    <tr t-foreach="o.move_lines.filtered(lambda x: not x.packing_list_id).sorted(key=lambda m: m.product_id.id)" t-as="move">
                                                        <td></td>
                                                        <td>
                                                            <span t-field="move.product_id.display_name"/><br/>
                                                            <span t-field="move.product_id.description_picking"/>
                                                        </td>
                                                        <td>
                                                            <span t-if="move.product_qty" t-field="move.product_qty"/>
                                                            <span t-if="not move.product_qty" t-esc="move.product_uom._compute_quantity(move.quantity_done, move.product_id.uom_id, rounding_method='HALF-UP')"/>
                                                            <span t-field="move.product_id.uom_id" groups="product.group_uom"/>
                                                        </td>
                                                    </tr>
                                              </tbody>
                                            </table>
                                          </td>
                                      </tr>
                                  </tbody>
                                  <tfoot>
                                      <tr>
                                          <td>
                                              <br/>
                                          </td>
                                      </tr>
                                  </tfoot>
                            </table>
                            <p t-if="o.state in ['draft', 'waiting', 'confirmed']">
                                You do not have any products reserved for this picking.  Please click the 'Reserve' button
                                to check if products are available.
                            </p>
                            <p t-field="o.note"/>
                        </div>
                    </t>
                 </t>
             </t>
        </template>
    </data>
</odoo>
