<?xml version="1.0" encoding="utf-8"?>

<odoo>

      <!-- Price unit with the partner decimals, for rounding and presentation -->
    <template id="report_saleorder_document_custom" inherit_id="sale.report_saleorder_document">
        <xpath expr='//span[@t-esc="&apos;, &apos;.join(map(lambda x: (x.description or x.name), l.tax_id))"]' position="replace">
            <span t-esc="', '.join(map(lambda x: (x.name), l.tax_id))"/>
        </xpath>
    </template>
</odoo>
